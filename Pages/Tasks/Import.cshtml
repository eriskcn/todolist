@page
@model todolist.Pages.Tasks.ImportModel
@{
    ViewData["Title"] = "Import Tasks";
}

<h1 class="mb-4">Import Tasks from Excel</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mt-2">
            <label for="excelFile">Select Excel file</label>
            <input type="file" id="excelFile" name="excelFile" class="form-control mt-2" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Import</button>
    </form>
</div>

@if (Model.ImportResult != null)
{
    <div class="alert alert-success mt-4">
        <p>Import result:</p>
        <ul>
            @foreach (var result in Model.ImportResult)
            {
                <li>@result</li>
            }
        </ul>
    </div>
}
